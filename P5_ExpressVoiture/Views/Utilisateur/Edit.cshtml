@model P5_ExpressVoiture.Models.ViewModels.UtilisateurEditViewModel

<h2>Modifier l'utilisateur</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="NomUtilisateur"></label>
        <input asp-for="NomUtilisateur" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="SelectedRoleId">Rôle</label>
        <select asp-for="SelectedRoleId" class="form-control" asp-items="@(new SelectList(Model.Roles, "Id", "NomRole"))"></select>
    </div>

    <button type="submit" class="btn btn-primary">Enregistrer</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>