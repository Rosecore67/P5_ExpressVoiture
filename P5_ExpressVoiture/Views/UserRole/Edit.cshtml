@model P5_ExpressVoiture.Models.ViewModels.UserRoleViewModel

<h2 class="form-title">Modifier le rôle</h2>

<form asp-action="Edit" class="custom-form">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="NomRole" class="control-label"></label>
        <input asp-for="NomRole" class="form-control" />
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary custom-btn">Enregistrer</button>
        <a asp-action="Index" class="btn custom-btn-secondary">Annuler</a>
    </div>
</form>