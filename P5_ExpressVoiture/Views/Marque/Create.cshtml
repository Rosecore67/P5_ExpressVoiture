@model P5_ExpressVoiture.Models.ViewModels.MarqueViewModel

<h2>Ajouter une nouvelle marque</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="NomMarque" class="control-label"></label>
        <input asp-for="NomMarque" class="form-control" />
        <span asp-validation-for="NomMarque" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Enregistrer</button>
    <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
