@model IEnumerable<P5_ExpressVoiture.Models.ViewModels.UserRoleViewModel>

<h2>Gestion des rôles</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nom du rôle</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.NomRole</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-warning">Modifier</a>
                    <form asp-action="Delete" asp-route-id="@role.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Supprimer</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Ajouter un nouveau rôle</a>
