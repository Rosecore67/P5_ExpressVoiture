@model P5_ExpressVoiture.Models.ViewModels.TypeReparationViewModel

<h2 class="form-title">Ajouter un type de réparation</h2>

<form asp-action="Create" class="custom-form">
    <div class="form-group">
        <label asp-for="NomTypeReparation" class="control-label"></label>
        <input asp-for="NomTypeReparation" class="form-control" />
        <span asp-validation-for="NomTypeReparation" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary custom-btn">Enregistrer</button>
        <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary custom-btn">Annuler</a>
    </div>
</form>
