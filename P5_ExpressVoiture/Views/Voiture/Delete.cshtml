@model P5_ExpressVoiture.Models.ViewModels.VoitureDetailsViewModel

@{
    ViewData["Title"] = "Supprimer la voiture";
}

<h1>Supprimer la voiture</h1>

<h3>Êtes-vous sûr de vouloir supprimer cette voiture ?</h3>

<div>
    <h4>@Model.Marque @Model.Modele</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Année
        </dt>
        <dd class="col-sm-10">
            @Model.Année.Year
        </dd>
        <dt class="col-sm-2">
            Finition
        </dt>
        <dd class="col-sm-10">
            @Model.Finition
        </dd>
        <dt class="col-sm-2">
            Date d'achat
        </dt>
        <dd class="col-sm-10">
            @Model.DateAchat.ToShortDateString()
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
    </form>
</div>
