@model P5_ExpressVoiture.Models.ViewModels.TypeReparationViewModel

<h2>Modifier le type de réparation</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="NomTypeReparation" class="control-label"></label>
        <input asp-for="NomTypeReparation" class="form-control" />
        <span asp-validation-for="NomTypeReparation" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Enregistrer</button>
    <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
